---
import Layout from "../layouts/Layout.astro";
import ChartDisplay from "../components/ChartDisplay.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Frontend Mentor | Expenses chart component">
  <main class="h-screen flex bg-cream px-4">
    <div class="m-auto w-full md:w-1/3">
      <h1 class="hidden">Expenses chart component</h1>
      <header
        class="flex h-24 bg-soft-red rounded-xl text-white p-4 justify-between items-center mb-3"
      >
        <div class="flex flex-col">
          <span class="text-white text-sm md:text-lg opacity-80">
            My balance</span
          >
          <span class="text-white text-xl md:text-3xl font-bold mt-1"
            >$921.48</span
          >
        </div>
        <div>
          <svg
            width="72"
            height="48"
            viewBox="0 0 72 48"
            xmlns="http://www.w3.org/2000/svg"
            ><g fill="none" fill-rule="evenodd"
              ><circle fill="#382314" cx="48" cy="24" r="24"></circle><circle
                stroke="#FFF"
                stroke-width="2"
                cx="24"
                cy="24"
                r="23"></circle>
            </g>
          </svg>
        </div>
      </header>
      <div class="bg-white rounded-xl p-4">
        <span class="font-bold text-2xl text-dark-brown tracking-wider"
          >Spending - Last 7 days</span
        >
        <ChartDisplay />
        <Footer />
      </div>
    </div>
  </main>
</Layout>
